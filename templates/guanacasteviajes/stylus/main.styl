@import "nib"
@import "normalize.styl"
@import "icons.styl"


$naranja = #eeae11
$lima =  rgb(244, 255, 228)
$verde = #99CC66
$rojo = #EE4035
cafe = #695C3E

body
	
	font 14px Times New Roman, Arial, Helvetica, sans-serif
	line-height 25px
	color cafe
p 
	margin 0 0 25px;
a 
	color $verde
	text-decoration none
	/*&:hover
		text-decoration underline*/	
	
h1 
	margin-top 0
	margin-bottom 10px
	line-height 1.5em

h2 
	margin-top 0
	margin-bottom 10px

input[type="text"],
input[type="email"]
	background-color #fff
	background-image:linear-gradient(#eee 1%, #fff 15%) !important
	border 1px solid #AAA
	box-shadow: 0 0 3px #fff inset,0 1px 1px rgba(0,0,0,0.1)
	height 20px

.chosen-single
	border-radius 0 !important
	background-color #fff !important
	background-image linear-gradient(#eee 1%, #fff 15%) !important

li.highlighted
	background-image none !important
	background-color $verde !important	
.img 
	border 1px solid #DBDBDB
	border-radius 5px
	padding .2em 

.btn
	box-shadow none
	text-decoration none
	display inline-block
	padding 16px 17px 15px 18px
	font 16px 'Tinos'
	color #ffffff
	background #f5c34c
	border none
	letter-spacing 0
	text-transform uppercase
	text-shadow none
	text-decoration none !important
	border-radius 0
	border-bottom 1px solid #f5c34c
	transition all 0.35s ease
	
	&:hover
		background none
		color #FFF
		background $naranja
		transition all 0.35s ease
	

.btn-primary
	background #FFF
	color $verde

	&:hover
		background none
		color #FFF
		background $naranja
		transition all 0.35s ease
.btn-success
.btn-info
	background $verde !important
	color #fff

	&:hover
		background none
		color $verde
		background $lima
		transition all 0.35s ease
.border-colors
	width 100%
	height 8px
	position absolute
	background: url(../img/circulos.png) repeat-x;

header
	padding 0
	position relative
	background-color $verde
	
	.border-colors
		bottom 0
	.up-box
		padding-bottom 25px
		padding-top 15px
		position relative
		
	.down-box
		background-color #ffffff
		padding-top 28px
		padding-bottom 15px
	.tel
		font 16px 'Tinos'
		color #ffffff
		text-transform uppercase
		margin 0
		& > span
			width 62px
			display inline-block
			color #ffffff
	.login, .advisor
		float right
		margin-top -20px
		margin-bottom 0
	#logo 
		display block
		padding 0
		float left
		font-size 40px
	#menu
		float right
		height 35px
		
		.parent
			.nav-child
			.sub-menu
				.parent
					&:after
						content '°'
						position absolute
						right -10px
						top 15px

			

			/*.parent
			&:after
				background red 
				content '°'*/
		
		ul 
			position relative
			left 0
			display block
			float left
			margin 0
			padding 0

			li 
				position relative
				display inline-block
				margin 0
				padding 0
				float left
				margin-left 12px
				zoom: 1
				padding 1px 10px 0 0
				line-height 11px !important
				border-right 1px solid #dbdbdb

				.nav-header
				a
					position relative
					padding 0
					border-radius 0
					margin 0
					color #4a4a4a
					box-shadow none !important
					font 16px/16px 'Tinos', Times New Roman, Arial, Helvetica, sans-serif
					text-shadow none
					display inline-block
					background none
					text-transform uppercase
					transition all 0.35s ease
					cursor pointer

				&:first-child + li + li + li + li + li + li + li
					margin-right 0
					padding-right 0
					border-right none
				&:hover 
					.nav-header
					a
						color $verde
				/*&:hover .sub-menu
					display block*/

				.nav-child
				.sub-menu 
					position absolute
					display none
					width 182px
					left -22px
					top 43px
					padding 21px 20px 29px 20px
					list-style none !important
					zoom: 1
					z-index 102
					background #ffffff
					margin 0
					border-top 4px solid #f5c34c
					box-shadow 0px 0px 5px rgba(0, 0, 0, .75)
					
					.nav-child
					.sub-menu
						left 205px
						top 0px
						


					li 
						background none
						float none
						margin 0
						padding 0
						border none
						width 100%
						text-align left
						border-bottom 1px solid #ebebeb
						height auto !important
						overflow visible !important

						.nav-header
						a 
							display block
							padding 0
							margin 0
							font 16px/16px 'Tinos', Times New Roman, Arial, Helvetica, sans-serif
							color #4a4a4a
							display inline-block
							background none
							text-transform uppercase
							padding 8px 0 7px 0
							transition: all 0.35s ease
							&:hover 
								color $verde
						/*&:hover 
							display block*/
			.active
				a 
					color $verde

